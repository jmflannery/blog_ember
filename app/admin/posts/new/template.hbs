<div class="new-post">
  <div class="input">
    <label>title:</label>
    {{input value=model.title placeholder="title here..." key-up='slugUpdated'}}
    <label>slug:</label>
    {{input value=model.slug placeholder="slug here..."}}
  </div>
  <div class="input">
    <label>content:</label>
    {{textarea value=model.content placeholder="Article markdown goes here..." wrap="on"}}
  </div>
  <button {{action 'addPost' model}}>Add Post</button>
</div>
