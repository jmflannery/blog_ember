<article class=post-article>
  <header class="post-header">
    <h1 class="title">{{post.title}}</h1>

    {{#if admin}}
      <div class='row'>
        {{#link-to 'admin.posts.index'}}
          All Posts
        {{/link-to}}
        {{#link-to 'admin.posts.edit' model}}
          Edit
        {{/link-to}}
        <a href='#' {{action 'deletePost' model}}>Delete</a>
      </div>
    {{/if}}

    <div class='row article-info'>
      <p>
        <span>{{created_at_formatted}}</span>
        <span class="title-icon">{{fa-icon "microchip"}}</span>
        <span>Jack Flannery</span>
      </p>
    </div>
  </header>
  <div class="post-content">
    {{markdown-to-html post.content}}
  </div>
</article>
