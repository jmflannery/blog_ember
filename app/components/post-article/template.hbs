<article class=post-article>
  <header class="post-header">
    <h1 class="title">{{post.title}}</h1>

    {{#if admin}}
      <div class='row' class="admin-controls">
        {{#link-to 'admin.posts.edit' post}}
          <span>
            {{fa-icon "pencil-square-o"}}
          </span>
        {{/link-to}}
        <a href='#' {{action 'deletePost' post}}>
          {{fa-icon "trash"}}
        </a>
      </div>
    {{/if}}

    <div class='row article-info'>
      <p>
        <span>{{created_at_formatted}}</span>
        <span class="title-icon">{{fa-icon "microchip"}}</span>
        <span>Jack Flannery</span>
      </p>
    </div>
  </header>
  <div class="post-content">
    {{markdown-to-html post.content}}
  </div>
</article>
