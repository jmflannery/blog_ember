<div class="post-listing">
  {{#if admin}}
    {{#link-to 'admin.posts.post' post}}
      <h2>{{post.title}}</h2>
    {{/link-to}}
    {{#link-to 'admin.posts.edit' post}}
      Edit
    {{/link-to}} |
    <a href='#' {{action 'deletePost' post}}>Delete</a> |
    {{#if post.published_at}}
      <a href='#' {{action 'unpublishPost' post}}>Unpublish</a>
    {{else}}
      <a href='#' {{action 'publishPost' post}}>Publish</a>
    {{/if}}
  {{else}}
    {{#link-to 'posts.post' post}}
      <h2>{{post.title}}</h2>
    {{/link-to}}
  {{/if}}
</div>
