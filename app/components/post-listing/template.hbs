<div class="post-listing">
  {{#if admin}}
    {{#link-to 'admin.posts.post' model}}
      <h2>{{model.title}}</h2>
      <p>{{model.content}}</p>
    {{/link-to}}
    {{#link-to 'admin.posts.edit' model}}
      Edit
    {{/link-to}}
    <a href='#' {{action 'deletePost' model}}>Delete</a>
  {{else}}
    {{#link-to 'posts.post' model}}
      <h2>{{model.title}}</h2>
      <p>{{model.content}}</p>
    {{/link-to}}
  {{/if}}
</div>
{{yield}}
