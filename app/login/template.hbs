<div class="row">
  <div class="col-lg-3 col-1"></div>
  <div class="col-lg-6 col-10">
    <h1>Log In</h1>
    <form>
      <div class="form-group">
        <label for="email">Email</label>
        {{input value=model.email type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email"}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{input value=model.password type="password" class="form-control" id="password" placeholder="Password"}}
      </div>
      <button {{action 'login' model}} type="submit" class="btn btn-primary">Log In</button>
    </form>
  </div>
</div>

